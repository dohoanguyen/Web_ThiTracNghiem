@{
    ViewBag.Title = "Đổi mật khẩu";
    ViewBag.HideNavbar = true;
    Layout = "~/Views/Shared/LayoutPage2.cshtml";
}

<link rel="icon" type="image/png" href="~/hinhanh/logo.png">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
        background: linear-gradient(135deg, #f0f7ff 0%, #ffffff 100%);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        background: #fff;
        border-radius: 20px;
        padding: 40px 35px;
        width: 100%;
        max-width: 420px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: 0.3s;
    }

        .login-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

    .login-logo {
        height: 90px;
        display: block;
        margin: 0 auto 15px;
    }

    .login-title {
        font-weight: 700;
        color: #1800AC;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 14px;
    }

    .btn-login {
        width: 100%;
        border-radius: 10px;
        font-weight: 600;
        padding: 10px 0;
        background-color: #1800AC;
        border-color: #1800AC;
    }

        .btn-login:hover,
        .btn-login:focus {
            background-color: #1800AC;
            border-color: #140090;
        }

    .text-muted small {
        font-size: 0.9rem;
    }

    .alert-custom {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1050;
        min-width: 300px;
    }
</style>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-custom">
        <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
    </div>
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-success alert-custom">
        <i class="fas fa-check-circle me-2"></i>@ViewBag.Success
    </div>
}

<div class="login-card">
    <img src="@Url.Content("~/hinhanh/logo.png")" alt="Logo" class="login-logo">
    <h3 class="login-title">Đổi mật khẩu</h3>

    <form method="post" action="@Url.Action("DoiMatKhau", "HocVien")">

        <div class="mb-3">
            <label class="form-label fw-semibold">Mật khẩu cũ</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" name="matKhauCu" id="mkCu" class="form-control" placeholder="Nhập mật khẩu cũ" required>
                <span class="input-group-text bg-white border-start-0" onclick="togglePass('mkCu','icon1')" style="cursor:pointer;">
                    <i class="fas fa-eye" id="icon1"></i>
                </span>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Mật khẩu mới</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
                <input type="password" name="matKhauMoi" id="mkMoi" class="form-control" placeholder="Ít nhất 5 ký tự" required>
                <span class="input-group-text bg-white border-start-0" onclick="togglePass('mkMoi','icon2')" style="cursor:pointer;">
                    <i class="fas fa-eye" id="icon2"></i>
                </span>
            </div>
        </div>

        <div class="mb-4">
            <label class="form-label fw-semibold">Xác nhận mật khẩu mới</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-check"></i></span>
                <input type="password" name="xacNhanMK" id="mkXN" class="form-control" placeholder="Nhập lại mật khẩu mới" required>
                <span class="input-group-text bg-white border-start-0" onclick="togglePass('mkXN','icon3')" style="cursor:pointer;">
                    <i class="fas fa-eye" id="icon3"></i>
                </span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-login">
            <i class="fas fa-save me-2"></i>Lưu thay đổi
        </button>
    </form>
</div>

<script>
    function togglePass(id, iconId) {
        const input = document.getElementById(id);
        const icon = document.getElementById(iconId);

        if (input.type === "password") {
            input.type = "text";
            icon.classList.replace("fa-eye", "fa-eye-slash");
        } else {
            input.type = "password";
            icon.classList.replace("fa-eye-slash", "fa-eye");
        }
    }
</script>
