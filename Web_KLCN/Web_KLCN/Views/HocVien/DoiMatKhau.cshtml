                <input type="password" name="xacNhanMK" id="mkXN" class="form-control" placeholder="Nhập lại mật khẩu mới" required>
                <span class="input-group-text bg-white border-start-0" onclick="togglePass('mkXN','icon3')" style="cursor:pointer;">
                    <i class="fas fa-eye" id="icon3"></i>
                </span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-login">
            <i class="fas fa-save me-2"></i>Lưu thay đổi
        </button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Hàm hiển thị/ẩn mật khẩu
    function togglePass(id, iconId) {
        const input = document.getElementById(id);
        const icon = document.getElementById(iconId);

        if (input.type === "password") {
            input.type = "text";
            icon.classList.replace("fa-eye", "fa-eye-slash");
        } else {
            input.type = "password";
            icon.classList.replace("fa-eye-slash", "fa-eye");
        }
    }

    $(document).ready(function () {
        // Lấy thông báo từ ViewBag
        const errorMsg = '@Html.Raw(Json.Encode(ViewBag.Error))';
        const successMsg = '@Html.Raw(Json.Encode(ViewBag.Success))';
        const notificationContainer = $('#notification-container');

        // Hàm tạo và hiển thị popup
        function showPopup(type, message) {
            // Đảm bảo message là chuỗi hợp lệ
            if (!message || message === 'null') return;

            let iconClass, alertClass;

            if (type === 'Success') {
                iconClass = 'fa-check-circle';
                alertClass = 'alert-success';
            } else {
                iconClass = 'fa-exclamation-triangle';
                alertClass = 'alert-danger';
            }

            const popupHtml = `
                <div class="alert ${alertClass} alert-popup">
                    <i class="fas ${iconClass} me-2"></i>${JSON.parse(message)}
                </div>
            `;

            // Xóa popup cũ và thêm popup mới
            notificationContainer.empty().append(popupHtml);
            const popup = notificationContainer.find('.alert-popup');

            // Hiển thị popup
            setTimeout(() => {
                popup.addClass('show');
            }, 50);

            // Tự động ẩn sau 3 giây
            setTimeout(() => {
                popup.removeClass('show');

                // Xóa khỏi DOM sau khi ẩn
                setTimeout(() => {
                    popup.remove();
                }, 500); // 500ms = thời gian transition CSS
            }, 3000); // 3 giây
        }

        // -----------------------------------------------------------------
        // Xử lý hiển thị thông báo và chuyển hướng
        // -----------------------------------------------------------------

        // 1. Nếu có thông báo lỗi, hiển thị popup lỗi
        if (errorMsg && errorMsg !== 'null') {
            showPopup('Error', errorMsg);
        }

        // 2. Nếu có thông báo thành công, hiển thị popup thành công VÀ chuyển hướng
        if (successMsg && successMsg !== 'null') {
            showPopup('Success', successMsg);

            // Chuyển hướng về trang Đăng nhập sau 3 giây (3000ms)
            setTimeout(() => {
                window.location.href = '@Url.Action("Login", "Home")'; 
            }, 3000);
        }
    });
</script>
