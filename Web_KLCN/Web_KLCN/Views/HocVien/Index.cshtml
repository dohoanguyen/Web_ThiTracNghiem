@model Web_KLCN.Models.HOCVIEN
@{
    ViewBag.Title = "Trang học viên";
    Layout = "~/Views/Shared/LayoutPage2.cshtml";
}

<div class="container py-5 fade-in">

    <h3 class="fw-bold mb-4" style="color:#1800AC;">Xin chào, @Model.TenHV 👋</h3>
    <p class="text-muted mb-4">Chào mừng bạn đến với không gian học tập của mình.</p>

    <div class="row g-4">

        <!-- Lớp học của tôi -->
        <div class="col-md-4">
            <a class="card p-4 shadow-sm text-center h-100 rounded-4 dashboard-item"
               href="@Url.Action("LopHoc","HocVien")">
                <i class="fa-solid fa-users fa-3x mb-3" style="color:#1800AC;"></i>
                <h5 class="fw-bold mb-2">Lớp học của tôi</h5>
                <p class="text-muted small">Xem danh sách lớp đang theo học</p>
            </a>
        </div>

        <!-- Làm bài trắc nghiệm -->
        <div class="col-md-4">
            <a class="card p-4 shadow-sm text-center h-100 rounded-4 dashboard-item"
               href="@Url.Action("LichThi","HocVien")">
                <i class="fa-solid fa-pen-to-square fa-3x mb-3" style="color:#0d6efd;"></i>
                <h5 class="fw-bold mb-2">Làm bài trắc nghiệm</h5>
                <p class="text-muted small">Vào thi ngay khi tới giờ</p>
            </a>
        </div>

        <!-- Kết quả thi -->
        <div class="col-md-4">
            <a class="card p-4 shadow-sm text-center h-100 rounded-4 dashboard-item"
               href="@Url.Action("DiemThi","HocVien")">
                <i class="fa-solid fa-chart-line fa-3x mb-3" style="color:#20c997;"></i>
                <h5 class="fw-bold mb-2">Kết quả thi</h5>
                <p class="text-muted small">Xem điểm và bài làm</p>
            </a>
        </div>

        <!-- Giáo viên giảng dạy -->
        <div class="col-md-4">
            <a class="card p-4 shadow-sm text-center h-100 rounded-4 dashboard-item"
               href="@Url.Action("GiaoVien","HocVien")">
                <i class="fa-solid fa-chalkboard-user fa-3x mb-3" style="color:#fd7e14;"></i>
                <h5 class="fw-bold mb-2">Giáo viên giảng dạy</h5>
                <p class="text-muted small">Danh sách giáo viên của bạn</p>
            </a>
        </div>

        <!-- Lịch học & Lịch thi -->
        <div class="col-md-4">
            <a class="card p-4 shadow-sm text-center h-100 rounded-4 dashboard-item"
               href="@Url.Action("LichThi","HocVien")">
                <i class="fa-solid fa-calendar-days fa-3x mb-3" style="color:#6f42c1;"></i>
                <h5 class="fw-bold mb-2">Lịch học & Thi</h5>
                <p class="text-muted small">Theo dõi lịch học & lịch thi</p>
            </a>
        </div>

    </div>
</div>

<style>
    .dashboard-item {
        text-decoration: none;
        transition: .25s;
    }

        .dashboard-item:hover {
            transform: translateY(-6px);
            box-shadow: 0 15px 25px rgba(0,0,0,.12);
        }
</style>
