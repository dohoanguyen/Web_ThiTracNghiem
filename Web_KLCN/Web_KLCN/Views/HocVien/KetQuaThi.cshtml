@model Web_KLCN.Models.KetQuaThiVM
@{
    ViewBag.Title = "Kết quả thi";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<div class="container py-5">
    <div class="text-center">
        <!-- Icon thành công -->
        <div class="mb-4">
            <i class="fas fa-check-circle fa-5x text-success"></i>
        </div>

        <h2 class="fw-bold text-success mb-3">Nộp bài thành công!</h2>
        <p class="text-muted mb-4">Cảm ơn bạn đã hoàn thành bài thi.</p>

        <!-- Card kết quả đẹp -->
        <div class="card mx-auto shadow-lg" style="max-width: 500px; border-radius: 20px; overflow:hidden;">
            <div class="card-header bg-primary text-white text-center py-3">
                <h4 class="mb-0">@Model.TenDe</h4>
                <small>@Model.MonHoc</small>
            </div>
            <div class="card-body text-center py-4">
                <!-- Thời gian làm bài -->
                <p class="mb-3">
                    <i class="fas fa-clock text-primary me-2"></i>
                    <strong>Thời gian làm bài:</strong><br />
                    <span class="fs-4 text-primary">
                        @(Model.ThoiGianLamBai.HasValue
                            ? Model.ThoiGianLamBai.Value.ToString(@"hh\:mm\:ss")
                            : "--:--:--")
                    </span>
                </p>

                <!-- Số câu đúng -->
                <p class="mb-3">
                    <i class="fas fa-check text-success me-2"></i>
                    <strong>Số câu đúng:</strong><br />
                    <span class="fs-3 fw-bold text-success">
                        @Model.SoCauDung / @Model.TongCau
                    </span>
                </p>

                <!-- Điểm số -->
                <p class="mb-4">
                    <i class="fas fa-trophy text-warning me-2"></i>
                    <strong>Điểm số:</strong><br />
                    <span class="fs-1 fw-bold text-warning">
                        @Model.Diem
                    </span>
                    <small class="text-muted">/ 10</small>
                </p>
            </div>
        </div>

        <!-- Nút xem lại -->
        <div class="mt-5">
            <a href="@Url.Action("XemLaiBaiLam", "HocVien", new { id = Model.MaKQ })"
               class="btn btn-lg btn-primary px-5 py-3 shadow">
                <i class="fas fa-eye me-2"></i>Xem lại bài làm chi tiết
            </a>
            <br /><br />
            <a href="@Url.Action("LichThi", "HocVien")" class="btn btn-outline-secondary">
                Quay lại lịch thi
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .card {
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-10px);
        }

    .btn-primary {
        background: #1800AC;
        border: none;
    }

        .btn-primary:hover {
            background: #0f0080 !important;
        }
</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}