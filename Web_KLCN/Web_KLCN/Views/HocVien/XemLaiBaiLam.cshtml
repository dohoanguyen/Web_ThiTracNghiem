@model Web_KLCN.Models.XemLaiBaiLamVM
@{
    ViewBag.Title = "Xem lại bài làm";
    Layout = "~/Views/Shared/LayoutPage2.cshtml";
}

<div class="container py-4 fade-in">

    <h3 class="fw-bold mb-4" style="color:#1800AC;">Xem lại bài làm</h3>

    <div class="alert alert-info mb-4">
        <b>Số câu đúng:</b> @Model.SoCauDung / @Model.CauHoiList.Count
        <br />
        <b>Điểm:</b> @Model.Diem
    </div>

    @foreach (var c in Model.CauHoiList)
    {
        var dung = c.DapAnChon == c.DapAnDung;

        <div class="card border-0 shadow-sm rounded-4 mb-4">
            <div class="card-body">

                <h6 class="fw-bold mb-3">
                    Câu @c.STT: @c.NoiDung
                    @if (dung)
                    {
                        <span class="badge bg-success ms-2">Đúng</span>
                    }
                    else
                    {
                        <span class="badge bg-danger ms-2">Sai</span>
                    }
                </h6>

                <div class="mt-3">
                    <p>
                        <b>Đáp án của bạn:</b>
                        <span class="text-@(dung ? "success" : "danger")">@c.DapAnChon</span>
                    </p>

                    <p>
                        <b>Đáp án đúng:</b>
                        <span class="text-success fw-bold">@c.DapAnDung</span>
                    </p>
                </div>

            </div>
        </div>
    }
</div>
