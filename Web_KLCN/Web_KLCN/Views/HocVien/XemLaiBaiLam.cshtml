@model Web_KLCN.Models.XemLaiBaiLamVM
@{
    ViewBag.Title = "Xem lại bài làm";
    Layout = "~/Views/Shared/LayoutPage2.cshtml";
}

<div class="container py-4 fade-in">

    <h3 class="fw-bold mb-4" style="color:#1800AC;">Xem lại bài làm</h3>

    <div class="result-summary p-3 rounded-4 shadow-sm mb-4">
        <p class="mb-1">
            <i class="fa-solid fa-circle-check me-2" style="color:#28a745;"></i>
            <b>Số câu đúng:</b> @Model.SoCauDung / @Model.CauHoiList.Count
        </p>
        <p class="mb-0">
            <i class="fa-solid fa-star me-2" style="color:#FFA500;"></i>
            <b>Điểm:</b>
            <span class="fw-bold" style="color:#1800AC;">@Model.Diem</span>
        </p>
    </div>

    @foreach (var c in Model.CauHoiList)
    {
        var dung = c.DapAnChon == c.DapAnDung;

        <div class="card border-0 shadow-sm rounded-4 mb-4 review-card">
            <div class="card-body">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="fw-bold mb-0">
                        Câu @c.STT: @c.NoiDung
                    </h6>

                    @if (dung)
                    {
                        <span class="badge bg-success px-3 py-2 rounded-pill">
                            <i class="fa-solid fa-check me-1"></i> Đúng
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger px-3 py-2 rounded-pill">
                            <i class="fa-solid fa-xmark me-1"></i> Sai
                        </span>
                    }
                </div>

                <div class="p-3 rounded-3 bg-light">
                    <p class="mb-2">
                        <b>Đáp án của bạn:</b>
                        <span class="fw-semibold text-@(dung ? "success" : "danger")">
                            @c.DapAnChon
                        </span>
                    </p>

                    <p class="mb-0">
                        <b>Đáp án đúng:</b>
                        <span class="text-success fw-bold">@c.DapAnDung</span>
                    </p>
                </div>

            </div>
        </div>
    }
</div>

<style>
    .result-summary {
        background: #f3f4ff;
        border: 1px solid #d8dcff;
    }

    .review-card {
        transition: .25s ease;
    }

        .review-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 22px rgba(0, 0, 0, .08);
        }
</style>
