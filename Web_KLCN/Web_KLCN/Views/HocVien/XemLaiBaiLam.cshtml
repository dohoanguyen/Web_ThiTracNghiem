@model Web_KLCN.Models.BaiThiViewModel
@{
    ViewBag.Title = "Xem lại bài làm";
    Layout = "~/Views/Shared/LayoutPage2.cshtml";
}

<div class="container py-4 fade-in">

    <h3 class="fw-bold mb-4" style="color:#1800AC;">Xem lại bài làm: @Model.TenDe</h3>

    <!-- Tổng kết -->
    <div class="result-summary p-3 rounded-4 shadow-sm mb-4">
        <p class="mb-1">
            <i class="fa-solid fa-circle-check me-2" style="color:#28a745;"></i>
            <b>Số câu đúng:</b> @Model.SoCauDung / @Model.CauHoiList.Count
        </p>
        <p class="mb-0">
            <i class="fa-solid fa-star me-2" style="color:#FFA500;"></i>
            <b>Điểm:</b> <span class="fw-bold" style="color:#1800AC;">@Model.Diem</span>
        </p>
    </div>

    @for (int i = 0; i < Model.CauHoiList.Count; i++)
    {
        var c = Model.CauHoiList[i];
        bool dung = false;
        bool boQua = string.IsNullOrEmpty(c.DapAnChon) && (c.DapAnChonList == null || !c.DapAnChonList.Any());

        // Tính đúng/sai chung
        if (!boQua)
        {
            if (c.MaP == 1)
            {
                var chon = (c.DapAnChon ?? "").Trim().ToLower();
                var dungDA = (c.DapAnDung ?? "").Trim().ToLower();
                dung = chon == dungDA;
            }
            else if (c.MaP == 2)
            {
                var chonList = (c.DapAnChonList ?? new List<string>()).Select(x => (x ?? "").Trim().ToLower()).ToList();
                var dungList = (c.DapAnDungList ?? new List<string>()).Select(x => (x ?? "").Trim().ToLower()).ToList();
                dung = chonList.Count == dungList.Count && !chonList.Except(dungList).Any();
            }
            else if (c.MaP == 3)
            {
                dung = string.Equals(c.DapAnChon?.Trim(), c.DapAnDung?.Trim(), StringComparison.OrdinalIgnoreCase);
            }
        }

        <div class="card shadow-sm rounded-4 mb-4 p-3">

            <h6 class="fw-bold mb-3">Câu @(i + 1): @c.NoiDung</h6>

            @* Trắc nghiệm 1 đáp án *@
            @if (c.MaP == 1)
            {
                <ul class="list-unstyled mb-2">
                    @foreach (var option in new[] { c.DapAnA, c.DapAnB, c.DapAnC, c.DapAnD })
                    {
                        string borderClass = "";
                        var chon = (c.DapAnChon ?? "").Trim().ToLower();
                        var optionNorm = (option ?? "").Trim().ToLower();

                        if (!boQua && chon == optionNorm)
                        {
                            borderClass = dung ? "border-success" : "border-danger";
                        }
                        else if ((c.DapAnDung ?? "").Trim().ToLower() == optionNorm)
                        {
                            borderClass = "border-success";
                        }

                        <li class="p-2 mb-1 rounded @borderClass" style="background:#f8f9fa">
                            @option
                        </li>
                    }
                </ul>
            }

            @* Trắc nghiệm nhiều đáp án *@
            @if (c.MaP == 2)
            {
                var chonList = c.DapAnChonList ?? new List<string>();
                var dungList = c.DapAnDungList ?? new List<string>();

                <ul class="list-unstyled mb-2">
                    @foreach (var y in c.ListYDung)
                    {
                        string option = y.NoiDung?.Trim() ?? "";
                        bool daChon = chonList.Contains(y.MaPhuongAn);
                        bool dungThucTe = dungList.Contains(y.MaPhuongAn);

                        string borderClass = "";
                        if (!boQua && daChon && dungThucTe) { borderClass = "border-success"; }
                        else if (!boQua && daChon && !dungThucTe) { borderClass = "border-danger"; }
                        else if (dungThucTe) { borderClass = "border-success"; }

                        <li class="p-2 mb-1 rounded @borderClass" style="background:#f8f9fa">
                            @option
                        </li>
                    }
                </ul>
            }

            @* Tự luận *@
            @if (c.MaP == 3)
            {
                <textarea class="form-control mb-2 fw-semibold" rows="3" readonly
                          style="border: 2px solid @(boQua ? "#ced4da" : (dung ? "#28a745" : "#dc3545")); background: #f9faff;">@c.DapAnChon</textarea>
            }

            @* Thông báo bỏ qua nếu có *@
            @if (boQua)
            {
                <div class="mb-2 p-2 rounded-3 bg-light text-muted">
                    <i class="fa-solid fa-circle-exclamation me-2"></i>
                    Bạn đã bỏ qua câu hỏi này.
                </div>
            }

            <div class="mt-2 p-2 rounded-3 bg-white border">
                <b>Đáp án đúng:</b>
                @if (c.MaP == 1 || c.MaP == 3)
                {
                    @c.DapAnDung
                }
                else if (c.MaP == 2)
                {
                    string.Join(", ", c.ListYDung
                        .Where(d => c.DapAnDungList.Contains(d.MaPhuongAn))
                        .Select(d => d.NoiDung));
                }
            </div>

            @if (!string.IsNullOrEmpty(c.GiaiThich))
            {
                <div class="mt-2 p-2 rounded-3 bg-white border">
                    <b>Giải thích:</b> @c.GiaiThich
                </div>
            }

        </div>
    }

    <style>
        .card {
            position: relative;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 18px rgba(0,0,0,0.08);
            }

        .border-success {
            border: 2px solid #28a745 !important;
        }

        .border-danger {
            border: 2px solid #dc3545 !important;
        }

        .fade-in {
            animation: fadeIn 0.35s ease-in-out;
        }

        keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
        }
    </style>
</div>
