@{
    ViewBag.Title = "Đăng ký học viên";
    ViewBag.HideNavbar = true;
    Layout = "~/Views/Shared/LayoutPage2.cshtml";
}

<link rel="icon" type="image/png" href="~/hinhanh/logo.png">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    html, body {
        height: 100%;
        margin: 0;
        background: linear-gradient(135deg, #f0f7ff 0%, #ffffff 100%);
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-card {
        background: #fff;
        border-radius: 20px;
        padding: 20px 25px;
        width: 100%;
        max-width: 380px;
        box-shadow: 0 10px 15px rgba(0,0,0,0.15);
        display: flex;
        flex-direction: column;
        justify-content: center;
        transition: all 0.3s ease; /* chuyển động mượt */
    }

        .register-card:hover {
            transform: translateY(-3px); /* nâng card */
            box-shadow: 0 20px 25px rgba(0, 0, 0, 0.25); /* shadow đậm hơn */
        }

    .register-logo {
        height: 80px;
        display: block;
        margin: 0 auto 15px;
    }

    .register-title {
        font-weight: 700;
        color: #1800AC;
        text-align: center;
        margin-bottom: 15px;
        font-size: 1.4rem;
    }

    .register-card .mb-3 {
        margin-bottom: 10px;           /* khoảng cách giữa các field */
    }

    .form-label {
        margin-bottom: 3px;             /* label gần input hơn */
        font-size: 0.95rem;
    }

    .form-control {
        border-radius: 8px;
        padding: 6px 10px;              /* input nhỏ gọn */
        font-size: 0.9rem;
    }

    .btn-register {
        width: 100%;
        border-radius: 8px;
        font-weight: 600;
        padding: 7px 0;
        background-color: #1800AC;
        border-color: #1800AC;
        font-size: 0.95rem;
    }

    .btn-register:hover, .btn-register:focus {
        background-color: #140090;
        border-color: #140090;
    }

    .text-center small a {
        color: #1800AC;
        font-weight: 600;
        text-decoration: none;
    }

    /* Responsive: nếu màn hình quá cao */
    media(max-height: 650px){
        .register-card {
            padding: 15px 20px;
        }
        .register-logo {
            height: 50px;
            margin-bottom: 8px;
        }
        .register-title {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }
        .form-control {
            padding: 5px 10px;
            font-size: 0.85rem;
        }
        .btn-register {
            padding: 6px 0;
            font-size: 0.9rem;
        }
    }
</style>

<div class="register-card">
    <img src="~/hinhanh/logo.png" alt="Logo" class="register-logo">
    <h3 class="register-title">Đăng ký tài khoản học viên</h3>

    <form method="post" action="@Url.Action("Register", "Home")">

        <div class="mb-3">
            <label class="form-label fw-semibold">Họ tên</label>
            <input type="text" name="hoTen" class="form-control" placeholder="Nhập họ tên học viên" required>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Tên đăng nhập</label>
            <input type="text" name="taiKhoan" class="form-control" placeholder="Nhập tên đăng nhập" required>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Mật khẩu</label>
            <input type="password" name="matKhau" class="form-control" placeholder="Nhập mật khẩu" required>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Xác nhận mật khẩu</label>
            <input type="password" name="xacNhanMatKhau" class="form-control" placeholder="Nhập lại mật khẩu" required>
        </div>

        <button type="submit" class="btn btn-primary btn-register mb-3">
            <i class="fas fa-user-plus me-2"></i>Đăng ký
        </button>

        <div class="text-center">
            <small>
                Đã có tài khoản?
                <a href="@Url.Action("Login", "Home")" class="fw-semibold text-decoration-none" style="color:#1800AC;">
                    Đăng nhập ngay
                </a>
            </small>
        </div>
    </form>
</div>
