@{
    ViewBag.Title = "Đăng nhập học viên";
    ViewBag.HideNavbar = true;  // Ẩn navbar ở layout
    Layout = "~/Views/Shared/LayoutPage2.cshtml";
}

<!-- Favicon -->
<link rel="icon" type="image/png" href="~/hinhanh/logo.png">

<!-- Bootstrap + Font Awesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
        background: linear-gradient(135deg, #f0f7ff 0%, #ffffff 100%);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        background: #fff;
        border-radius: 20px;
        padding: 40px 35px;
        width: 100%;
        max-width: 420px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: 0.3s;
    }

        .login-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

    .login-logo {
        height: 90px;
        display: block;
        margin: 0 auto 15px;
    }

    .login-title {
        font-weight: 700;
        color: #1800AC;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 14px;
    }

    .btn-login {
        width: 100%;
        border-radius: 10px;
        font-weight: 600;
        padding: 10px 0;
        background-color: #1800AC;
        border-color: #1800AC;
    }

        .btn-login:hover,
        .btn-login:focus {
            background-color: #1800AC;
            border-color: #140090;
        }

    .text-muted small {
        font-size: 0.9rem;
    }

    .alert-custom {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1050;
        min-width: 300px;
    }
</style>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show alert-custom">
        <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="login-card">
    <img src="~/hinhanh/logo.png" alt="Logo" class="login-logo">
    <h3 class="login-title">Đăng nhập học viên</h3>

    <!-- ✅ Form đăng nhập -->
    <form method="post" action="@Url.Action("Login", "Home")">
        <div class="mb-3">
            <label class="form-label fw-semibold">Tên đăng nhập</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input type="text" name="taiKhoan" class="form-control" placeholder="Nhập tài khoản" required autofocus>
            </div>
        </div>

        <div class="mb-4">
            <label class="form-label fw-semibold">Mật khẩu</label>
            <div class="input-group position-relative">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" name="matKhau" class="form-control" id="matKhauInput" placeholder="Nhập mật khẩu" required>
                <span class="input-group-text bg-white border-start-0" onclick="togglePassword()" style="cursor:pointer;">
                    <i class="fas fa-eye" id="toggleIcon"></i>
                </span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-login mb-3">
            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
        </button>

        <div class="text-center">
            <small class="text-muted">
                <i class="fas fa-info-circle me-1"></i>
                Liên hệ admin nếu quên mật khẩu
            </small>
        </div>
    </form>
</div>

<script>
    function togglePassword() {
        const input = document.getElementById('matKhauInput');
        const icon = document.getElementById('toggleIcon');
        if (input.type === 'password') {
            input.type = 'text';
            icon.classList.replace('fa-eye', 'fa-eye-slash');
        } else {
            input.type = 'password';
            icon.classList.replace('fa-eye-slash', 'fa-eye');
        }
    }
</script>
