@{
    var maTK = Session["MaTK"];
    var hoTen = Session["HoTen"];
    var tenDangNhap = Session["TenDangNhap"];
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TUQ Education</title>

    <link rel="icon" type="image/png" href="~/hinhanh/logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light py-3 navbar-fixed">
        <div class="container">
            <a class="navbar-brand text-primary" href="/">
                <img src="~/hinhanh/logo.png" class="me-2" style="height: 60px; width: auto;" />
                <span class="text-primary">TUQ</span> <span class="text-dark">Trung Tâm Luyện Thi</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link px-3 active" href="#home">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link px-3" href="#services">Khóa học</a></li>
                    <li class="nav-item"><a class="nav-link px-3" href="#features">Tính năng</a></li>
                    <li class="nav-item"><a class="nav-link px-3" href="#contact">Liên hệ</a></li>

                    @if (maTK == null)
                    {
                        <li class="nav-item">
                            <a class="btn btn-primary ms-3 px-3" href="/Home/Login">
                                <i class="fa-solid fa-right-to-bracket me-1"></i> Đăng nhập
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown ms-3">
                            <a class="nav-link d-flex align-items-center" href="#" id="userMenu"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/hinhanh/avatar-default.png" alt="avatar" class="user-avatar me-2" />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm p-2" aria-labelledby="userMenu" style="min-width:250px;">
                                <li class="px-3 py-2 border-bottom">
                                    <strong>@hoTen</strong><br />
                                    <small class="text-muted">@tenDangNhap</small>
                                </li>
                                <li>
                                    <a class="dropdown-item py-2" href="/HocVien/ThongTinCaNhan">
                                        <i class="fa-regular fa-id-card me-2 text-primary"></i> Thông tin cá nhân
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item py-2" href="/HocVien/DoiMatKhau">
                                        <i class="fa-solid fa-key me-2 text-warning"></i> Đổi mật khẩu
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-danger py-2" href="/HocVien/Logout">
                                        <i class="fa-solid fa-right-from-bracket me-2"></i> Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- SECTIONS -->
    <section id="home" class="hero text-center text-white">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100">
                <div class="col-lg-10">
                    <h1 class="display-3 fw-bold mb-4">
                        Chào mừng đến với <span class="text-primary">TUQ</span>
                    </h1>
                    <p class="lead fs-4 mb-5">
                        Hệ thống quản lý luyện thi chất lượng cao<br>
                        <small class="opacity-75">Học mọi lúc mọi nơi - Thi sát đề thật</small>
                    </p>
                    <a href="#services" class="btn btn-primary btn-lg px-5 py-3 fs-5 shadow">
                        <i class="fas fa-rocket me-2"></i>Bắt đầu học ngay
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section id="services" class="section-padding bg-light-alt">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-4">Khóa học luyện thi</h2>
                <p class="lead text-muted">Chất lượng cao - Đội ngũ giáo viên giàu kinh nghiệm</p>
            </div>
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="card service-card h-100 text-center p-5">
                        <div class="service-icon"><i class="fas fa-calculator"></i></div>
                        <h4 class="fw-bold mb-3">Luyện thi Toán</h4>
                        <p class="text-muted">1000+ câu hỏi đa dạng<br />Giải chi tiết từng dạng bài</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="card service-card h-100 text-center p-5">
                        <div class="service-icon"><i class="fas fa-atom"></i></div>
                        <h4 class="fw-bold mb-3">Luyện thi Lý</h4>
                        <p class="text-muted">Giải bài tập chuyên sâu<br />Theo từng chuyên đề</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="card service-card h-100 text-center p-5">
                        <div class="service-icon"><i class="fas fa-flask"></i></div>
                        <h4 class="fw-bold mb-3">Luyện thi Hóa</h4>
                        <p class="text-muted">Ngân hàng đề thi thử<br />Đầy đủ kiến thức</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="features" class="section-padding">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-1 order-2">
                    <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
                         class="img-fluid rounded shadow-lg w-100" alt="Features">
                </div>
                <div class="col-lg-6 order-lg-2 order-1">
                    <h2 class="display-5 fw-bold mb-5">Tính năng nổi bật</h2>
                    <div class="features-item">
                        <i class="fas fa-database features-icon"></i>
                        <div>
                            <h6 class="fw-bold mb-1">Ngân hàng đề thi</h6>
                            <p class="text-muted mb-0">2000+ câu hỏi chất lượng cao</p>
                        </div>
                    </div>
                    <div class="features-item">
                        <i class="fas fa-chart-line features-icon"></i>
                        <div>
                            <h6 class="fw-bold mb-1">Theo dõi tiến độ</h6>
                            <p class="text-muted mb-0">Báo cáo chi tiết kết quả thi</p>
                        </div>
                    </div>
                    <div class="features-item">
                        <i class="fas fa-mobile-alt features-icon"></i>
                        <div>
                            <h6 class="fw-bold mb-1">Truy cập mọi lúc</h6>
                            <p class="text-muted mb-0">Truy cập 24/7 trên mọi thiết bị</p>
                        </div>
                    </div>
                    <div class="features-item">
                        <i class="fas fa-users features-icon"></i>
                        <div>
                            <h6 class="fw-bold mb-1">Quản lý lịch học</h6>
                            <p class="text-muted mb-0">Phân bổ thời gian dễ dàng</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="contact" class="cta-section">
        <div class="container text-center">
            <h2 class="display-5 fw-bold mb-4">Sẵn sàng cho kỳ thi?</h2>
            <p class="lead mb-5">Đăng ký ngay hôm nay để nhận ưu đãi 20% học phí</p>
            <a href="#" class="btn btn-light btn-lg px-5 py-3 fs-5 shadow-lg">
                <i class="fas fa-paper-plane me-2"></i>Đăng ký ngay
            </a>
        </div>
    </section>

    <!-- NỘI DUNG TRANG CON -->
    <main class="mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-graduation-cap me-2 text-primary"></i> TUQ
                    </h5>
                    <p class="text-light mb-0">
                        Trung tâm luyện thi chất lượng cao<br />
                        Tân Phú, TP.HCM
                    </p>
                </div>
                <div class="col-lg-4 mb-4">
                    <h6 class="fw-bold mb-3 text-light">Liên hệ</h6>
                    <div class="text-light">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-phone me-3 text-primary"></i><span>xxxx yyyyy</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-envelope me-3 text-primary"></i><span>tuq@ttlt.edu.vn</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-map-marker-alt me-3 text-primary"></i><span>140 Lê Trọng Tấn, Tân Phú, TP.HCM</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 mb-4">
                    <h6 class="fw-bold mb-3 text-light">Theo dõi chúng tôi</h6>
                    <div class="social">
                        <a href="#" class="me-4"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="me-4"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="me-4"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4 border-light" />
            <div class="text-center">
                <p class="mb-0 text-light">&copy; 2025 TUQ Education. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
            });
        });

        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar-fixed');
            if (window.scrollY > 50) navbar.classList.add('shadow');
            else navbar.classList.remove('shadow');
        });

        document.querySelectorAll('.service-card').forEach(card => {
            card.addEventListener('mouseenter', () => card.style.transform = 'translateY(-10px)');
            card.addEventListener('mouseleave', () => card.style.transform = 'translateY(0)');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
