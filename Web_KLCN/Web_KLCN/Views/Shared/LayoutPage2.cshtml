<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TUQ Education</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/hinhanh/logo.png">

    <!-- Bootstrap 5 + FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #1800AC;
            --dark: #222;
            --light: #f8f9fa;
        }

        body {
            background: #f4f6ff;
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
        }

        /* Header */
        header.navbar {
            background-color: var(--primary);
            color: #fff;
            box-shadow: 0 2px 10px rgba(0,0,0,.15);
        }

        header .navbar-brand {
            font-weight: 700;
            color: #fff !important;
            font-size: 1.5rem;
        }

        header .nav-link {
            color: #fff !important;
            transition: .25s;
        }

            header .nav-link:hover {
                opacity: .8;
            }

        /* Footer */
        footer {
            background: var(--dark);
            color: #fff;
            text-align: center;
            padding: 12px 0;
            font-size: 0.9rem;
            width: 100%;
        }

        /* Animation */
        .fade-in {
            animation: fadeIn .4s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- ✅ Header -->
    @if (ViewBag.HideNavbar != true)
    {
        <header class="navbar navbar-expand-lg px-4" style="background:#1800AC;">
            <a class="navbar-brand text-white fw-bold" href="@Url.Action("Index","HocVien")">
                <i class="fa-solid fa-graduation-cap me-2"></i>TUQ Education
            </a>

            <div class="ms-auto d-flex align-items-center gap-3">

                <!-- Icon thông báo -->
                <div class="position-relative me-3" style="cursor:pointer;">
                    <i class="fa-solid fa-bell text-white fa-lg"></i>
                    <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle px-1"
                          style="font-size:10px;">3</span>
                </div>

                <!-- Avatar + Menu -->
                <div class="dropdown">
                    <img src="~/hinhanh/avatar_default.png"
                         class="rounded-circle dropdown-toggle"
                         data-bs-toggle="dropdown"
                         width="42" height="42"
                         style="cursor:pointer; border:2px solid #fff;" />

                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li>
                            <a class="dropdown-item" href="@Url.Action("ThongTinCaNhan","HocVien")">
                                <i class="fa-solid fa-user me-2"></i>Thông tin cá nhân
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item" href="@Url.Action("DoiMatKhau","HocVien")">
                                <i class="fa-solid fa-lock me-2"></i>Đổi mật khẩu
                            </a>
                        </li>

                        <li><hr class="dropdown-divider" /></li>

                        <li>
                            <a class="dropdown-item text-danger" href="@Url.Action("Logout","HocVien")">
                                <i class="fa-solid fa-right-from-bracket me-2"></i>Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
    }


    <!-- ✅ Nội dung trang -->
    <main class="container fade-in py-5">
        @RenderBody()
    </main>

    <!-- ✅ Footer (ẩn ở trang Login) -->
    @if (ViewBag.HideNavbar != true)
    {
        <footer class="py-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 mb-4">
                        <h5 class="fw-bold mb-3">
                            <i class="fas fa-graduation-cap me-2 text-primary"></i>
                            TUQ
                        </h5>
                        <p class="text-light mb-0">
                            Trung tâm luyện thi chất lượng cao<br>
                            Tân Phú, TP.HCM
                        </p>
                    </div>
                    <div class="col-lg-4 mb-4">
                        <h6 class="fw-bold mb-3 text-light">Liên hệ</h6>
                        <div class="text-light">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-phone me-3 text-primary"></i>
                                <span>xxxx yyyyy</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-envelope me-3 text-primary"></i>
                                <span>tuq@ttlt.edu.vn</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-map-marker-alt me-3 text-primary"></i>
                                <span>140 Lê Trọng Tấn, Tân Phú, TP.HCM</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 mb-4">
                        <h6 class="fw-bold mb-3 text-light">Theo dõi chúng tôi</h6>
                        <div class="social">
                            <a href="#" class="me-4"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="me-4"><i class="fab fa-youtube"></i></a>
                            <a href="#" class="me-4"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
                <hr class="my-4 border-light">
                <div class="text-center">
                    <p class="mb-0 text-light">&copy; 2025 TUQ Education. All Rights Reserved.</p>
                </div>
            </div>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
