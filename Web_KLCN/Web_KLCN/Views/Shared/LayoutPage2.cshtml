@{
    var maTK = Session["MaTK"];
    var hv = Session["HOCVIEN"] as Web_KLCN.Models.HOCVIEN;
    var tenHV = hv != null ? hv.TenHV : "Học viên";
    var tenDangNhap = Session["TenDangNhap"];
    var avatar = hv?.AnhDaiDien != null ? Url.Content("~/hinhanh/" + hv.AnhDaiDien) : Url.Content("~/hinhanh/user.png");
    bool hideNavbar = ViewBag.HideNavbar == true;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TUQ Education</title>

    <link rel="icon" type="image/png" href="~/hinhanh/logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root { --tuq-primary: #1800AC; }

        .navbar-custom { background-color: #fff !important; }
        .brand-text-primary { color: var(--tuq-primary) !important; font-weight: 700; }
        .nav-icon { color: var(--tuq-primary); }
        .user-avatar { width: 38px; height: 38px; border-radius: 50%; object-fit: cover; }
        .notif-badge { position: absolute; top: -4px; right: -4px; background: #ffca28; color: #111; border-radius: 50%; padding: 2px 6px; font-weight: 700; font-size: 11px; }
        .dropdown-menu.custom { min-width: 260px; border-radius: 8px; box-shadow: 0 8px 24px rgba(24,0,172,0.08); }

        body {
            padding-top: @(hideNavbar ? "0" : "80px");
            margin: 0;
            background-color: #f8f9fa;
        }

        footer .social-icons a { color: #ffffff; opacity: .9; }
        footer .social-icons a:hover { opacity: 1; }
    </style>
</head>
<body class="@(hideNavbar ? "no-header" : "")">

    @if (!hideNavbar)
    {
        <!-- HEADER -->
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/HocVien/Index">
                    <img src="~/hinhanh/logo.png" style="height:56px;width:auto;" class="me-2" />
                    <span class="fw-bold" style="color:#1800AC; font-size:1.4rem;">TUQ Education</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navMenu">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item"><a class="nav-link text-dark fw-medium" href="/HocVien/Index"><i class="fa-solid fa-house me-1 nav-icon"></i> Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link text-dark fw-medium" href="/HocVien/KhoaHoc"><i class="fa-solid fa-book me-1 nav-icon"></i> Khóa học</a></li>
                        <li class="nav-item"><a class="nav-link text-dark fw-medium" href="/HocVien/LichHoc"><i class="fa-solid fa-calendar-days me-1 nav-icon"></i> Lịch học</a></li>
                        <li class="nav-item"><a class="nav-link text-dark fw-medium" href="/HocVien/KetQua"><i class="fa-solid fa-chart-line me-1 nav-icon"></i> Kết quả</a></li>

                        <!-- Icon thông báo -->
                        <li class="nav-item position-relative mx-2">
                            <a href="/HocVien/ThongBao" class="nav-link text-dark p-2 position-relative" title="Thông báo">
                                <i class="fa-solid fa-bell fa-lg nav-icon"></i>
                                <span class="notif-badge">1</span>
                            </a>
                        </li>

                        <!-- Avatar -->
                        @if (maTK != null)
                        {
                            <li class="nav-item dropdown ms-2">
                                <a class="nav-link d-flex align-items-center" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@avatar" alt="avatar" class="user-avatar me-2" />
                                    <span class="fw-semibold text-dark">@tenHV</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-3 mt-2" aria-labelledby="userMenu" style="min-width:260px;">
                                    <!-- Thông tin người dùng -->
                                    <li class="px-3 py-3 border-bottom">
                                        <div class="d-flex align-items-center">
                                            <img src="@avatar" class="user-avatar me-3" />
                                            <div>
                                                <div class="fw-semibold" style="color:#1800AC;">@tenHV</div>
                                                <div class="small text-muted">@tenDangNhap</div>
                                            </div>
                                        </div>
                                    </li>

                                    <!-- Menu item -->
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center py-2" href="/HocVien/ThongTinCaNhan">
                                            <i class="fa-regular fa-id-card me-2" style="color:#1800AC;"></i>
                                            <span>Thông tin cá nhân</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center py-2" href="/HocVien/DoiMatKhau">
                                            <i class="fa-solid fa-key me-2" style="color:#EAB308;"></i>
                                            <span>Đổi mật khẩu</span>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center py-2 text-danger" href="/Home/Logout">
                                            <i class="fa-solid fa-right-from-bracket me-2" style="color:#DC2626;"></i>
                                            <span>Đăng xuất</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-3">
                                <a class="btn" style="background:#1800AC; color:#fff;" href="/Home/Login">
                                    <i class="fa-solid fa-right-to-bracket me-1"></i> Đăng nhập
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    }

    <!-- MAIN CONTENT -->
    <main class="@(hideNavbar ? "p-0 m-0" : "container mt-4")">
        @RenderBody()
    </main>

    @if (!hideNavbar)
    {
        <!-- FOOTER -->
        <footer class="py-5 bg-dark text-light mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 mb-4">
                        <h5 class="fw-bold mb-3">
                            <i class="fas fa-graduation-cap me-2" style="color:#1800AC;"></i>
                            TUQ Education
                        </h5>
                        <p class="mb-0">
                            Trung tâm luyện thi chất lượng cao<br />
                            Tân Phú, TP.HCM
                        </p>
                    </div>
                    <div class="col-lg-4 mb-4">
                        <h6 class="fw-bold mb-3 text-light">Liên hệ</h6>
                        <div class="text-light">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-phone me-3" style="color:#1800AC;"></i><span>xxxx yyyyy</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-envelope me-3" style="color:#1800AC;"></i><span>tuq@ttlt.edu.vn</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-map-marker-alt me-3" style="color:#1800AC;"></i><span>140 Lê Trọng Tấn, Tân Phú, TP.HCM</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 mb-4">
                        <h6 class="fw-bold mb-3 text-light">Theo dõi chúng tôi</h6>
                        <div class="social">
                            <a href="#" class="me-4 text-light"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="me-4 text-light"><i class="fab fa-youtube"></i></a>
                            <a href="#" class="me-4 text-light"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="text-light"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
                <hr class="my-4 border-light" />
                <div class="text-center">
                    <p class="mb-0">&copy; 2025 TUQ Education. All Rights Reserved.</p>
                </div>
            </div>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
